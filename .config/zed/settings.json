{
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "o4-mini"
    },
    "version": "2"
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never"
  },

  "relative_line_numbers": true,
  "cursor_blink": false,
  "soft_wrap": "editor_width",

  "wrap_guides": [80, 120],
  "max_tabs": 1,
  "tab_bar": {
    "show": false
  },
  "scrollbar": {
    "show": "never"
  },

  "theme": {
    "mode": "system",
    "light": "One Dark",
    "dark": "One Dark"
  },

  "ui_font_size": 16,
  "buffer_font_size": 13,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_line_height": {
    "custom": 1.8
  },

  "telemetry": {
    "metrics": false,
    "diagnostics": false
  }
}
